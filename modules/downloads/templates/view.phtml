                        <a class="dropdown-item" href="?act=transfer_file&amp;id=<?= $id ?>"><?= _t('Move File') ?></a>
                        <a class="dropdown-item" href="?act=mp3tags&amp;id=<?= $id ?>"><?= _t('Edit MP3 Tags') ?></a>
                    <?php endif; ?>
                </div>
            </div>
        </div>

    <div class="row">
        <div class="col-xl-8">
            <audio src="<?= $file['main_file']['source_url'] ?>" controls></audio>
        </div>
    </div>
<?php endif; ?>

<?php if ($file['file_type'] === 'video'): ?>
    <div class="row">
        <div class="col-xl-8">
            <div class="embed-responsive embed-responsive-16by9">
                <video src="<?= $file['main_file']['source_url'] ?>" controls></video>
            </div>
        </div>
    </div>
